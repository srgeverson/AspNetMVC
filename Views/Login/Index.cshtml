@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "_Unauthenticated";
}
<div class="card login mt-5">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-2" role="alert">
            <strong>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else @if (TempData["MensagemAlerta"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show m-2" role="alert">
            <strong>Atênção!</strong> @TempData["MensagemAlerta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-2" role="alert">
            <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h5 class="card-title text-center">Acesso Restrito</h5>
    <div class="card-body">
        <form asp-controller="Login" asp-action="Logar" method="post">
            <div class="input-group mb-3">
                <span id="lblEmail" class="input-group-text">Login</span>
                <input type="text" asp-for="Email" class="form-control">
            </div>
            <div class="input-group mb-3">
                <label id="lblSenha" class="input-group-text">Senha</label>
                <input type="password" asp-for="Senha" class="form-control">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>