@{
    ViewData["Title"] = "Login";
    @model UsuarioLoginModel;

}
<div class="card login mt-5">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-2" role="alert">
            <strong>Ocorreu um erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else @if (TempData["MensagemAlerta"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show m-2" role="alert">
            <strong>Ocorreu um erro!</strong> @TempData["MensagemAlerta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h5 class="card-title text-center">Acesso Restrito</h5>
    <div class="card-body">
        <form action="/Login/Logar" method="post">
            <div class="input-group mb-3">
                <span id="lblEmail" class="input-group-text">Login</span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="input-group mb-3">
                <label id="lblSenha" class="input-group-text">Senha</label>
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>